<% include ./partials/header.ejs %>

<div class="container">
	<div class="row">
		<div class="container">
			<div class="container">
				<h1 style="text-align: center">New Post</h1>
			</div>
			<div>
				<form action="/blogs" method="POST">
					<div>
						<div class="form-group">
							<input class="form-control" type="text" name="blog[title]" placeholder="Title">
						</div>
						<div class="form-group">
							<input class="form-control" type="text" name="blog[author]" placeholder="Written By">	
						</div>
						<div class="form-group">
							<textarea class="form-control" name="blog[dec]" rows="25">Entry...</textarea>
						</div>
						<button class="btn btn-primary">Post!</button>
					</div>	
				</form>	
			</div>	
		</div>
	</div>
</div>
<a href="/blogs">Back</a>
