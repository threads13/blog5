<% include ./partials/header.ejs %>

<div class="container form">
	<h2>Edit "<%= blog.title %>"</h2>
<!-- 	put save and back as buttons pushed to the right side
	have to figure out how to do this in bootstrap -->
</div>

<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
	<div class="container form">
		<div class="form-group">
			<input class="form-control" type="text" name="blog[title]" value="<%= blog.title %>">
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="blog[author]" value="<%= blog.author %>">
		</div>
		<div class="form-group">
			<textarea class="form-control" name="blog[desc]" rows="25"><%= blog.desc %></textarea>
		</div>	
		<input class="brn btn-primary rounded" type="submit">		
		<a id="back" href="/blogs">Back</a>
	</div>
</form>
