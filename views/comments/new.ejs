

<div class="container">
	<div class="row">
		<div class="container">
			<div class="container">
				<h1 style="text-align: center">Add Comment To <%= blog.title %></h1>
			</div>
			<div>
				<form action="/blogs/<%= blog._id %>/comments" method="POST">
					<div>
						<div class="form-group">
							<input class="form-control" type="text" name="comments[author]" placeholder="Author">	
						</div>
						<div class="form-group">
							<textarea class="form-control" name="comments[desc]" rows="25"></textarea>
						</div>
						<button class="btn btn-success">Post!</button>
					</div>	
				</form>	
			</div>	
		</div>
	</div>
</div>

