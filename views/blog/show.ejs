<% include ../partials/header.ejs %>

<div class="container-fluid form">
	<h2><%= blog.title %></h2>
	<div class="container-fluid">
		<div>
			<p>Written by <strong id="author"><a href=""><%= blog.author %></a></strong></p>
			<p><em><%= blog.posted%></em></p>
		</div>
		<div id="desc">
			<p><%- blog.desc %></p>
		</div>
		<div>
			<% blog.comments.forEach(function(comment){ %>
	    		<p><strong><%= comment.author %></strong></p>
	    		<p><%= comment.posted.toDateString() %></p>
	        	<p><%= comment.desc %></p>
			<% }) %>
		</div>
	</div>
	<% if(currentUser) { %>
	<form class="form" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
		<a class="btn btn-success btn-sm" href="/blogs/<%= blog._id %>/edit">Edit</a>
		<button class="btn btn-danger btn-sm">Delete</button>
	</form>
	<% } %>
</div>


<% include ../partials/footer.ejs %>
